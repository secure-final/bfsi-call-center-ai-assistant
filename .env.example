# BFSI Call Center AI Assistant - Environment
# Copy to .env and set values as needed.

# Similarity (Tier 1)
SIMILARITY_THRESHOLD=0.88
EMBEDDING_MODEL=all-MiniLM-L6-v2
DATASET_INDEX_PATH=data/dataset_index

# SLM (Tier 2)
BASE_MODEL_NAME=TinyLlama/TinyLlama-1.1B-Chat-v1.0
ADAPTER_PATH=models/adapters/v1.0
# Set to true only on Linux/Mac (bitsandbytes not supported on Windows)
USE_4BIT=false

# RAG (Tier 3)
RAG_TOP_K=3
RAG_CHROMA_PATH=data/rag_chroma
KNOWLEDGE_PATH=knowledge

# Guardrails
GUARDRAILS_ENABLED=true
OUT_OF_DOMAIN_MESSAGE=I can only help with banking, loan, and account-related queries. Please ask a question in that domain.

# Demo
LOG_LEVEL=INFO
